<% content_for :title, "Meters" %>
<div class="table-responsive">

  <!-- Meters -->
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">Meters
          <%= link_to "Add New", new_meter_path(), :class => "btn btn-outline-success btn-sm", :role => "button" %></h1>
  </div>

  <table class="table table-striped table-sm" style="font-size: 14px; padding-left: 15px">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">id</th>
        <th scope="col">Name</th>
        <th scope="col">Meter number</th>
        <th scope="col">NLC</th>
        <th scope="col">Company</th>
        <th scope="col">Operator</th>
        <th scope="col">Kt</th>
        <th scope="col">Inverted</th>
        <th scope="col"></th>

      </tr>
    </thead>
    <tbody>
      <% @meters.each_with_index do |meter, index| %>
        <tr>
          <td scope="row"><%= index + 1 %></td>
          <td><%= meter.id %></td>
          <td><%= meter.name %></td>
          <td><%= meter.number %></td>
          <td><%= meter.nlc %></td>
          <td><%= meter.company.name %></td>
          <td><%= meter.operator.name %></td>
          <td><%= meter.kt %></td>
          <td></td>
          <td>
            <%= link_to "Edit", edit_meter_path(meter), :class => "btn btn-outline-warning btn-xs", :role => "button" %>
            <%= link_to "Delete", meter_path(meter), :class => "btn btn-danger btn-xs", :role => "button", method: :delete, data: {confirm: "Are you sure?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <!-- Companies -->
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">Companies
          <%= link_to "Add New", new_company_path(), :class => "btn btn-outline-success btn-sm", :role => "button" %></h1>
  </div>
  <table class="table table-striped table-sm" style="font-size: 14px; padding-left: 15px">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Description</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each_with_index do |company, index| %>
        <tr>
          <td scope="row"><%= index + 1 %></td>
          <td><%= company.name %></td>
          <td><%= company.address %></td>
          <td><%= company.description %></td>
          <td>
            <%= link_to "Edit", edit_company_path(company), :class => "btn btn-outline-warning btn-xs", :role => "button" %>
            <%= link_to "Delete", company_path(company), :class => "btn btn-danger btn-xs", :role => "button", method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <!-- Operators -->
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">Operators
          <%= link_to "Add New", new_operator_path(), :class => "btn btn-outline-success btn-sm", :role => "button" %></h1>
  </div>
  <table class="table table-striped table-sm" style="font-size: 14px; padding-left: 15px">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @operators.each_with_index do |operator, index| %>
        <tr>
          <td scope="row"><%= index + 1 %></td>
          <td><%= operator.name %></td>
          <td><%= operator.description %></td>
          <td>
            <%= link_to "Edit", edit_operator_path(operator), :class => "btn btn-outline-warning btn-xs", :role => "button" %>
            <%= link_to "Delete", operator_path(operator), :class => "btn btn-danger btn-xs", :role => "button", method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>